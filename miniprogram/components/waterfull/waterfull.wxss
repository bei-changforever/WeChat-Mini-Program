.masonry {
  width: 100%;
  margin: 20rpx auto;
  columns: 1;
  column-gap: 40rpx;
  border-radius: 20rpx;
   overflow: hidden;
}

.masonry .item {
  position: relative;
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;
  border-radius: 20rpx;
  break-inside: avoid;
  margin-bottom: 30rpx;
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: center;
  box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
}

.masonry .item .masimg {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 20rpx;
  transition: transform 0.6s;

}

.masonry .item .masimg.active {
  transform: scale(1.5);
}

.masonry .item .mastext {
  color: white;
  padding: 20rpx;
  display: block;
}

.masonry .btn {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid whitesmoke;
  border-radius: 999rpx;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
}

.masonry .container-icon {
  font-size: 60rpx;
}

.masonry .container {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 50%;
  color: whitesmoke;
  position: absolute;
  top: 200rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  text-align: center;
}

.masonry .mark {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.7);
}