/* pages/index/index.wxss */
.customheader {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}

::-webkit-scrollbar {
  width: 0;   
  height: 0;
  color: transparent;
}
.swiper-box {
  width: 100%;
  height: 550rpx;
}

.banner-item {
  width: 100%;

}

.banner-item .banner-item-img {
  width: 100%;
  height: 100%;
}


.container-box {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;

}

.index-card {
  width: 100%;
  height: 150rpx;
  background-color: #b2926c;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.index-card .index-card-item {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  

}

.index-card .index-card-item  .img{
  width: 60rpx;
  height: 60rpx;
 
  
}
.index-card .index-card-item  .index-card-img{
  width: 100%;
  height: 100%;
}

.index-card .index-card-item .card-text {
  font-size: 40rpx;
  color: white;
  font-family: 'Nigelina';
  padding: 4rpx;
  border-radius: 20rpx;
  text-shadow: -0.2px -0.2px 0.1px #ffffff;
}


.week-new {
  margin-top: 20rpx;
  width: 100%;
  background-color: white;
  box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
  border-radius: 20rpx;
}

.week-new .week-new-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.week-new .week-new-box .week-title {
  width: 100%;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;

}
.week-new .week-new-box .week-title .img {
  width: 100rpx;
}

.week-new .week-new-box .week-title .img .week-title-img {
  width: 100%;
 
}

.week-new .week-new-box .week-title .text {
  color: rgb(19,88,94);
  font-size: 60rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;   
  font-family: 'Nigelina';
}

.week-new .week-new-box .week-title .time {
  color: #999;
}

.week-new-product {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.week-new-product .product-item  {
  width: 49%;
  height: auto;
  background-color: white;
  margin-bottom: 40rpx;
}

.product-img  {
  width: 100%;
  position: relative;
}

.product-img .auto-img {
  width: 100%;
  display: block;
  border-radius: 20rpx;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
}

.product-img  .new-icon {
 position: absolute;
 top: 0;
 right: 0;
 color: rgb(231,97,63);
 font-size: 100rpx;
}

.product-desc {
  margin-top: 20rpx;
  width: 100%;
}

.product-desc .coffe-name {
 width: 100%;
 display: flex;
 justify-content: space-between;
 font-size: 30rpx;
}

.product-desc .coffe-name .type {
  display: inline-block;
  margin-right: 4rpx;
  padding: 0 24rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 25rpx;
  color: #999;
  background-image: linear-gradient(3deg,#F9F9F9 0,#F0F0F0 100%);
  border-radius: 44rpx;
}

.price {
  margin-top: 10rpx;
  width: 220rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(245,237,235);
  color: white;
  font-size: 22rpx;
  border-radius: 14rpx;
  overflow: hidden;
  text-align: center;
  line-height: 50rpx;

}

.price-title {
  width: 55%;
  height: 100%;
  font-weight: bold;
  color: rgb(231,97,63);
  
}

.price-price {
  position: relative;
  width: 45%;
  height: 100%;
  background-color: rgb(231,97,63);
  font-size: 20rpx;
 
}

.price-price::after {
  content: "";
  position: absolute;
  top: 0;
  left: -28rpx;
  border: 20rpx solid;
  transform: rotate(-25deg);
  border-color: transparent rgb(231,97,63) transparent transparent;

}

.price-price::before {
  content: "";
  position: absolute;
  top: 29rpx;
  left: -39rpx;
  border: 24rpx solid;
  transform: rotate(-20deg);
  border-color: transparent rgb(231,97,63) transparent transparent;

}

.origin {
  margin:25rpx auto ;
  width: 100%;
  display: flex;
  background-color: white;
  border-radius: 20rpx;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 60rpx;
  font-weight: bold;
  font-family: 'Nigelina';
  color: rgb(19,88,94);
  box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
}

.origin .img {
  width: 100rpx;
}

.origin .img .auto-img{
  width: 100%;
}

.origin .chtext {
  font-size: 30rpx;
  color:#999;
  display: block;
}



