/* pages/my/my.wxss */
.customheader {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}


.my-box {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.banner {
  width: 100%;
}

.banner-img {
  width: 100%;
  display: block;
}

.my-and-my {
  padding: 20rpx;
  box-sizing: border-box;
  /* transform: translateY(-40%); */
  width: 100%;
  background-color: rgb(106,106,106);
}

.my-login {
  width: 100%;
  display: flex;
  align-items: center;
  color: whitesmoke;
}

.my-login .img {
  width: 100rpx;
  margin-right: 20rpx;
}

.my-login .img .my-login-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
}

.user-menu {
  margin-top: 20rpx;
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background: #74ebd5;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #ACB6E5, #74ebd5);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #ACB6E5, #74ebd5);
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  border-radius: 20rpx;
}

.desc {
  width: 100%;
  min-height: 100rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: rgb(230,230,230);
}


.user-tab {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: whitesmoke;
  font-size: 30rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
  
}

.user-tab-img {
  margin-bottom: 20rpx;
  width: 100rpx;
  display: block;
}

.name {
  width: 100%;
  /* background-color: pink; */
}

.footer {
  width: 100%;
  position: absolute;
  bottom: 20rpx;
}

.loginout-btn {
  background-color: rgb(0,178,106);
  color: white;
  width: 90%;
}